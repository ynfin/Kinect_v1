<Window x:Class="Kinect_v1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="700"
         Closing="MainWindow_Closing">
    
    <Grid x:Name="img" Margin="10,0,10,0" Background="White">
        <Viewbox HorizontalAlignment="Center" Grid.Row="1">
            <Image Source="{Binding DepthSource}" Stretch="UniformToFill" OpacityMask="#FFAA6565" MinHeight="26" MinWidth="26" />
        </Viewbox>
    </Grid>
</Window>
